<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:fab="http://schemas.android.com/apk/res-auto"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="vertical"
		android:id="@+id/filelist_layout1">

		<com.xl.view.FileListView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:id="@+id/filelist"/>

	</LinearLayout>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:id="@+id/filelist_layout2"
		android:layout_alignRight="@id/filelist_layout1"
		android:layout_alignBottom="@id/filelist_layout1"
		android:orientation="vertical">

		<EditText
			android:layout_width="wrap_content"
			android:inputType="textPassword"
			android:layout_height="wrap_content"
			android:ems="10"/>

		<com.xl.view.FloatingActionButton
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			fab:fab_colorNormal="@color/colorAccent"
			android:tint="#f0f0f0"
			android:id="@+id/filelist_add"
			fab:fab_icon="@drawable/ic_add_black_24dp"
			android:layout_marginBottom="24dip"
			android:layout_marginRight="24dip"/>

		<com.xl.view.FloatingActionButton
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			fab:fab_colorNormal="@color/colorAccent"
			fab:fab_icon="@drawable/ic_content_paste_white_24dp"
			android:tint="#f0f0f0"
			android:id="@+id/filelist_paste"
			android:layout_marginBottom="24dip"
			android:layout_marginRight="24dip"/>

		<com.xl.view.FloatingActionButton
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			fab:fab_colorNormal="@color/colorAccent"
			fab:fab_icon="@drawable/ic_clear_white_24dp"
			android:tint="#f0f0f0"
			android:id="@+id/filelist_clear"
			android:layout_marginBottom="24dip"
			android:layout_marginRight="24dip"/>

	</LinearLayout>

</RelativeLayout>

